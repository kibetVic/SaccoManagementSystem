@model IEnumerable<SaccoManagementSystem.Models.SystemUsers>

@{
    ViewData["Title"] = "User Management";
    ViewData["SubTitle"] = "Manage system users";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">System Users</h3>
            <a asp-action="SignUp" class="btn btn-primary btn-sm">
                <i class="bi bi-person-plus"></i> Add New User
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No users found. <a asp-action="SignUp">Create the first user</a>.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Organization</th>
                            <th>User Group</th>
                            <th>Branch</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.OrganizationCode</td>
                                <td>
                                    <span class="badge bg-info">@user.UserGroup</span>
                                </td>
                                <td>@user.Branch</td>
                                <td>
                                    @if (user.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="EditUser" asp-route-id="@user.SystemUserId"
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        @if (!user.Active)
                                        {
                                            <a asp-action="ActivateUser" asp-route-id="@user.SystemUserId"
                                               class="btn btn-outline-success" title="Activate"
                                               onclick="return confirm('Activate this user?')">
                                                <i class="bi bi-check-circle"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="DeactivateUser" asp-route-id="@user.SystemUserId"
                                               class="btn btn-outline-warning" title="Deactivate"
                                               onclick="return confirm('Deactivate this user?')">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                        }

                                        <a asp-action="DeleteUser" asp-route-id="@user.SystemUserId"
                                           class="btn btn-outline-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this user?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    <div class="card-footer">
        <small class="text-muted">Total Users: @Model.Count()</small>
    </div>
</div>